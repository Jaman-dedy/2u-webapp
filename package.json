{
  "name": "2u-web-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "serve -s build $(perl -pe 's/PORT=/-l /' .env | grep '\\-l ')",
    "start:dev": "react-scripts start",
    "build": "react-scripts build && echo '/* /index.html 200' > ./build/_redirects",
    "lint": "eslint src/",
    "lint:fix": "eslint --fix src/",
    "test": "react-scripts test --watchAll --env=jsdom --coverage -u",
    "test:CI": "CI=true react-scripts test --env=jsdom --coverage -u",
    "cy:open": "cypress open",
    "cy:ci": "cypress run",
    "cy:run-ci": "start-server-and-test start:dev http://localhost:3000 cy:ci",
    "eject": "react-scripts eject",
    "deploy": "pm2 deploy ecosystem.config.js production setup && pm2 deploy ecosystem.config.js production"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn lint",
      "pre-push": "git diff HEAD --quiet && yarn test:CI"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "axios": "^0.19.2",
    "device-detector-js": "^2.2.1",
    "dotenv": "^8.2.0",
    "google-map-react": "^1.1.7",
    "i18next": "^19.1.0",
    "node-sass": "^4.13.1",
    "prop-types": "^15.7.2",
    "query-string": "^6.11.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-geocode": "^0.2.1",
    "react-google-autocomplete": "^1.1.2",
    "react-google-maps": "^9.4.5",
    "react-i18next": "^11.3.1",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.3.1",
    "react-toastify": "^5.5.0",
    "recharts": "^2.0.0-beta.1",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "semantic-ui-calendar": "mdehoog/Semantic-UI-Calendar",
    "semantic-ui-calendar-react": "^0.15.3",
    "semantic-ui-react": "^0.88.2",
    "serve": "^11.3.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "cypress": "^3.8.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.2",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "start-server-and-test": "^1.10.8"
  }
}
